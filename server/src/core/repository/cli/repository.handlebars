@Injectable()
export class {{interfaceName}}Repository extends Repository<{{interfaceName}}Record> {
    constructor(databaseService: DatabaseService) {
        super(databaseService, '{{name}}', [
        {{#each columns as |column|}}
            {
                name: '{{column.name}}',
                isPrimary: {{column.isPrimaryKey}},
                isNullable: {{column.nullable}},
            },
        {{/each}}       
        ] as ColumnConfig[]);
    }
}
