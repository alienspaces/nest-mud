{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://gitlab.com/alienspaces/nest-mud/dungeon-character.schema.json",
    "title": "Dungeon Character",
    "type": "object",
    "properties": {
        "data": {
            "type": "array",
            "items": { "$ref": "#/$defs/data" }
        }
    },
    "required": ["data"],
    "additionalProperties": false,
    "$defs": {
        "data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "dungeon_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "dungeon_location_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "strength": {
                    "type": "number"
                },
                "dexterity": {
                    "type": "number"
                },
                "intelligence": {
                    "type": "number"
                },
                "health": {
                    "type": "number"
                },
                "fatigue": {
                    "type": "number"
                },
                "coin": {
                    "type": "number"
                },
                "experience": {
                    "type": "number"
                },
                "points": {
                    "type": "number"
                },
                "created_at": {
                    "type": "string",
                    "format": "date"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "id",
                "location_id",
                "name",
                "strength",
                "dexterity",
                "intelligence",
                "coin",
                "experience",
                "created_at",
                "updated_at"
            ]
        }
    }
}
