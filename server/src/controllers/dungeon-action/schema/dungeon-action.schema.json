{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://gitlab.com/alienspaces/nest-mud/dungeon-action.schema.json",
    "title": "Dungeon Action",
    "type": "object",
    "properties": {
        "data": {
            "type": "array",
            "items": { "$ref": "#/$defs/data" }
        }
    },
    "required": ["data"],
    "additionalProperties": false,
    "$defs": {
        "data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "created_at": {
                    "type": "string",
                    "format": "date"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": ["id", "sentence", "created_at", "updated_at"]
        }
    }
}
