{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://gitlab.com/alienspaces/nest-mud/dungeon-location.schema.json",
    "title": "Dungeon Location",
    "type": "object",
    "properties": {
        "data": {
            "type": "array",
            "items": { "$ref": "#/$defs/data" }
        }
    },
    "required": ["data"],
    "additionalProperties": false,
    "$defs": {
        "data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid"
                },
                "dungeon_id": {
                    "type": "string",
                    "format": "uuid"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "default": {
                    "type": "string"
                },
                "north_dungeon_location_id": {
                    "type": "string"
                },
                "northeast_dungeon_location_id": {
                    "type": "string"
                },
                "east_dungeon_location_id": {
                    "type": "string"
                },
                "southeast_dungeon_location_id": {
                    "type": "string"
                },
                "south_dungeon_location_id": {
                    "type": "string"
                },
                "southwest_dungeon_location_id": {
                    "type": "string"
                },
                "west_dungeon_location_id": {
                    "type": "string"
                },
                "northwest_dungeon_location_id": {
                    "type": "string"
                },
                "up_dungeon_location_id": {
                    "type": "string"
                },
                "down_dungeon_location_id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "format": "date"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "id",
                "location_id",
                "name",
                "description",
                "default",
                "north_dungeon_location_id",
                "northeast_dungeon_location_id",
                "east_dungeon_location_id",
                "southeast_dungeon_location_id",
                "south_dungeon_location_id",
                "southwest_dungeon_location_id",
                "west_dungeon_location_id",
                "northwest_dungeon_location_id",
                "up_dungeon_location_id",
                "down_dungeon_location_id",
                "created_at",
                "updated_at"
            ]
        }
    }
}
